# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@host:5432/librarity_prod

# Security
SECRET_KEY=your-super-secret-key-min-32-chars-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# API Configuration
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://librarity.1edu.kz

# CORS Origins (comma-separated)
CORS_ORIGINS=https://librarity.1edu.kz,http://localhost:3000

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Polar.sh (Payment)
POLAR_API_KEY=your-polar-api-key
POLAR_ORGANIZATION_ID=your-polar-org-id
POLAR_WEBHOOK_SECRET=your-polar-webhook-secret

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHANNEL_ID=your-channel-id

# Sentry (Error tracking - optional)
SENTRY_DSN=your-sentry-dsn

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,epub,txt

# AI Settings
DEFAULT_MODEL=gpt-4-turbo-preview
MAX_TOKENS=4096
TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Session
SESSION_LIFETIME_DAYS=30

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# MinIO Object Storage (recommended for production)
MINIO_ENDPOINT=api.euroline.storage.1edu.kz
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin12345
MINIO_BUCKET_NAME=librarityl
MINIO_USE_SSL=true
MINIO_REGION=us-east-1

# Storage Mode
STORAGE_MODE=minio

# Legacy S3 (alternative to MinIO - optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_BUCKET_NAME=librarity-prod-uploads
# AWS_REGION=us-east-1
# STORAGE_MODE=s3

# Monitoring
PROMETHEUS_ENABLED=True
METRICS_PORT=9090
